<section class="engine"><a rel="external" href="https://mobirise.com">mobirise.com</a></section><section class="mbr-section mbr-section__container article mbr-after-navbar" id="header3-e" style="background-color: rgb(255, 255, 255); padding-top: 100px; padding-bottom: 20px;">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h3 class="mbr-section-title display-2"><%= user.username %></h3>
                <small class="mbr-section-subtitle"><%= user.fullname %></small>
            </div>
        </div>
    </div>
</section>


<section class="mbr-section article mbr-section__container" id="content6-o" style="background-color: rgb(255, 255, 255); padding-top: 20px; padding-bottom: 20px;">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-md-6 lead"><p><strong>Likes:</strong>
                <% user.likes.each do |like| %>
                    <%= "##{like}" %>
                <% end %>
            </p></div>
            <div class="col-xs-12 col-md-6 lead"><p><strong>Dislikes:</strong>
                <% user.dislikes.each do |dislike| %>
                    <%= "##{dislike}" %>
                <% end %>
            </p></div>
        </div>
    </div>
</section>


<section class="mbr-cards mbr-section mbr-section-nopadding" id="features4-m" style="background-color: rgb(255, 255, 255);">
    <% user.posts.limit(3).reverse.each do |post| %>
        <div class="mbr-cards-row row">
                <div class="mbr-cards-col col-xs-12 col-lg-4" style="padding-top: 80px; padding-bottom: 80px;">
                    <div class="container">
                        <div class="card cart-block">
                            <% post.extdata.first do |extdata1| %>
                            <div class="card-img iconbox">
                                <%= link_to image_tag(extdata1), post_path(post), {:class => "etl-icon icon-phone mbr-iconfont mbr-iconfont-features4", :style => "color: black;"} %>
                            </div>
                            <% end %>
                            <div class="card-block">
                                <h4 class="card-title"><%= link_to post.title, post_path(post) %></h4>
                                <h5 class="card-subtitle"><%= post.created_at.strftime("posted %e %B %Y, %l:%M %p %Z") %></h5>
                                <p class="card-text"><%= truncate(post.content, :length => 250) %></p>
                                <p class="card-text"><b>
                                    <% post.tags.each do |tag| %>
                                        <%= "##{tag}" %>
                                    <% end %> 
                                </b></p>
                            </div>
                        </div>
                    </div>
                </div>
    <% end %>
</section>