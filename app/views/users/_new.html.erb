<section class="mbr-section" id="form1-8" style="background-color: rgb(255, 255, 255); padding-top: 120px; padding-bottom: 120px;">
    
    <div class="mbr-section mbr-section__container mbr-section__container--middle">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 text-xs-center">
                    <h3 class="mbr-section-title display-2">SIGN UP</h3>
                    <small class="mbr-section-subtitle">Create your Komplex account and begin seeing and sharing, just the things you like. Or <a href="login.html#form1-7">login</a> to your existing account.</small>
                </div>
            </div>
        </div>
    </div>
    
    <div class="mbr-section mbr-section-nopadding">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-lg-10 col-lg-offset-1" data-form-type="formoid">
       
                    <%= form_for(:user, url: users_url) do |f| %>

                        <div class="row row-sm-offset">

                            <div class="col-xs-12 col-md-4">
                                <div class="form-group">
                                    <label class="form-control-label" for="form1-8-email">Email</label>
                                    <%= f.email_field :email, :placeholder => "Email", :id => "form1-8-email", :class => "form-control" %>
                                </div>
                            </div>


                            <div class="col-xs-12 col-md-4">
                                <div class="form-group">
                                    <label class="form-control-label" for="form1-8-name">Name</label>
                                    <%= f.text_field :fullname, :placeholder => "Full Name", :id => "form1-8-name", :class => "form-control" %>
                                </div>
                            </div>


                            <div class="col-xs-12 col-md-4">
                                <div class="form-group">
                                    <label class="form-control-label" for="form1-8-phone">Password</label>
                                    <%= f.password_field :password, :placeholder => "Password", :id => "form1-8-password", :class => "form-control" %>
                            </div>

                        </div>

                        <div class="row row-sm-offset">

                            <div class="col-xs-12 col-md-4">
                                <div class="form-group">
                                    <label class="form-control-label" for="form1-8-name">Username</label>
                                    <%= f.text_field :username, :placeholder => "Username", :id => "form1-8-username", :class => "form-control" %>
                                </div>
                            </div>

                            <div class="col-xs-12 col-md-4">
                                <div class="form-group">
                                    <label class="form-control-label" for="form1-8-name">Likes</label>
                                    <%= f.text_field :likes, :placeholder => "Likes", :id => "form1-8-likes", :class => "form-control" %>
                                </div>
                            </div>

                            <div class="col-xs-12 col-md-4">
                                <div class="form-group">
                                    <label class="form-control-label" for="form1-8-name">Dislikes</label>
                                    <%= f.text_field :dislikes, :placeholder => "Dislikes", :id => "form1-8-dislikes", :class => "form-control" %>
                                </div>
                            </div>

                        </div>

                        <div><%= f.submit "SIGNUP", class: "btn btn-primary", :type => "submit" %></div>

                    <% end %>
                </div>
            </div>
        </div>
    </div>
</section>